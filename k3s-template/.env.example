# K3s Cluster Configuration
# Copy this file to .env and customize for your environment
# DO NOT commit .env to version control!

# ============================================================================
# Cluster Configuration
# ============================================================================
CLUSTER_NAME=k3s-prod
ENVIRONMENT=production

# ============================================================================
# Networking Configuration
# ============================================================================
# MetalLB IP range for LoadBalancer services
METALLB_IP_RANGE=192.168.1.240-192.168.1.250

# Cluster domain
CLUSTER_DOMAIN=cluster.local

# Ingress domain (for external access)
INGRESS_DOMAIN=example.com

# ============================================================================
# Database Credentials
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme-secure-password
POSTGRES_DB=app

# Redis (optional password)
REDIS_PASSWORD=

# ============================================================================
# Object Storage (MinIO/S3)
# ============================================================================
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=changeme-secure-key
MINIO_REGION=us-east-1

# ============================================================================
# Monitoring & Observability
# ============================================================================
# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme-secure-password

# Prometheus retention
PROMETHEUS_RETENTION=15d
PROMETHEUS_STORAGE_SIZE=50Gi

# Loki retention
LOKI_RETENTION=7d
LOKI_STORAGE_SIZE=50Gi

# ============================================================================
# Security & Authentication
# ============================================================================
# Authentik (SSO/IdP)
AUTHENTIK_SECRET_KEY=changeme-random-50-char-string
AUTHENTIK_BOOTSTRAP_PASSWORD=changeme-secure-password
AUTHENTIK_BOOTSTRAP_TOKEN=changeme-secure-token

# Cert-manager (Let's Encrypt)
CERT_MANAGER_EMAIL=admin@example.com

# ============================================================================
# Cloudflare Integration (Optional)
# ============================================================================
# Cloudflare API token for DNS challenges and external-dns
CF_API_TOKEN=

# Cloudflare Tunnel token (for secure remote access)
CF_TUNNEL_TOKEN=

# Cloudflare Zone ID
CF_ZONE_ID=

# ============================================================================
# External Services & APIs
# ============================================================================
# OpenAI API (if using AI features)
OPENAI_API_KEY=sk-dummy

# Slack webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email/SMTP for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================================================
# Backup Configuration
# ============================================================================
# S3 bucket for backups
BACKUP_S3_BUCKET=k3s-backups
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# ============================================================================
# GPU Configuration (if applicable)
# ============================================================================
# NVIDIA driver version
NVIDIA_DRIVER_VERSION=535.129.03

# CUDA version
CUDA_VERSION=12.2

# ============================================================================
# Application-Specific Settings
# ============================================================================
# Add your application-specific environment variables here
# APP_SECRET_KEY=
# APP_DATABASE_URL=
